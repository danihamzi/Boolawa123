<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hamziii.boolawa.Main2Activity"
    android:background="@color/colorPrimaryDark"
    tools:showIn="@layout/app_bar_main2">


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




    <Button
        android:id="@+id/design_card"
        style="@style/main2_buttons_style"
        android:onClick="goToLoginActivity"
        android:text="design card"
        android:layout_below="@+id/view_invite"

         />

    <Button
        android:id="@+id/hire_catering"
        style="@style/main2_buttons_style"
        android:onClick="goToLoginActivity"
        android:text="hire catering"
        android:layout_below="@+id/design_card"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/evnt_organize"
        style="@style/main2_buttons_style"
        android:onClick="goToLoginActivity"
        android:text="event organizer"
        android:layout_below="@+id/hire_photo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
       />

    <Button
        android:id="@+id/hire_photo"
        style="@style/main2_buttons_style"
        android:onClick="goToLoginActivity"
        android:text="hire photographer"
        android:layout_below="@+id/hire_catering"
        />

    <Button
        android:id="@+id/view_invite"
        style="@style/main2_buttons_style"
        android:onClick="goToLoginActivity"
        android:text="view invitation"
        android:layout_below="@+id/snd_invite"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/snd_invite"
        style="@style/main2_buttons_style"
        android:onClick="goToLoginActivity"
        android:text="send invitation"
        android:layout_marginTop="22dp"
         />

   </RelativeLayout>
</ScrollView>
